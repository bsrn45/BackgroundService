<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:weightSum="1"
    android:background="@color/dim_foreground_material_dark">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_toregister"
        android:id="@+id/btn_toregister"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_weight="0.06"
        android:background="@color/design_textinput_error_color_dark"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/txt_or"
        android:id="@+id/txt_or"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_tologin"
        android:id="@+id/btn_tologin"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_weight="0.06"
        android:background="@color/material_deep_teal_200"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

</LinearLayout>